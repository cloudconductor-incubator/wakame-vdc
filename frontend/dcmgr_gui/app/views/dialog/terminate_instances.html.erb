<div id="terminate_instances_dialog">
  <div class="message">
    <p><%= t("dialog.terminate_instances.message") %></p>
  </div>
  <table id="instances">
    <% @instances.each do |i| %>
    <tr>
      <td><%= t("dialog.terminate_instances.instance_id") %></td>
      <td class="instance_id"><%= i["id"] %></td>
    </tr>
    <tr>
      <td class="border"><%= t("dialog.terminate_instances.display_name") %></td>
      <td class="border"><%= i["display_name"] %></td>
    </tr>
    <% end %>
  </table>
</div>

